datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Service {
  id         Int      @id @default(autoincrement())
  name       String
  address    String
  city       String

  // New optional fields
  category   String?   // e.g. "Health", "Library", "Community centre"
  phone      String?
  website    String?
  postalCode String?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
